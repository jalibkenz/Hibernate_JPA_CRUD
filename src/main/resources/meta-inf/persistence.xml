<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"

             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"

             version="3.0">


    <persistence-unit name="myPersistenceUnit1">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>

            <!-- DB Connection -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/hibernateCRUD?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="R_ke5nz7"/>

            <!-- Hibernate Dialect -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- Auto Schema Update -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Show SQL -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- === SECOND LEVEL CACHE (JCache) === -->
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.region.factory_class"
                      value="org.hibernate.cache.jcache.JCacheRegionFactory"/>
            <!-- Hint the JCache provider (Ehcache's JSR-107 provider will be auto-discovered if on classpath) -->
            <property name="hibernate.javax.cache.provider" value="org.ehcache.jsr107.EhcacheCachingProvider"/>

            <!-- Optional: enable query cache if needed -->
            <property name="hibernate.cache.use_query_cache" value="false"/>

            <!-- Enable statistics to debug cache behaviour -->
            <property name="hibernate.generate_statistics" value="true"/>

        </properties>
    </persistence-unit>


</persistence>

